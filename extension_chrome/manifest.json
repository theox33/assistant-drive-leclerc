{
  "manifest_version": 3,
  "name": "Liste courses to Leclerc (Serverless)",
  "version": "3.0",
  "description": "Assistant courses 100% autonome",
  "permissions": ["activeTab", "scripting", "storage", "tabs"],
  "host_permissions": [
    "https://www.leclercdrive.fr/*",
    "https://*.leclercdrive.fr/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.leclercdrive.fr/*",
        "https://*.leclercdrive.fr/*"
      ],
      "js": ["content.js"]
    }
  ]
}